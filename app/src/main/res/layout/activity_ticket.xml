<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondotacos"
    tools:context=".Ticket">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="600dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="80dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="160dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="250dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="500dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TICKET CANASTAKOS"
        android:textColor="#F34D19"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.524" />

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:hint="Cliente"
        android:textColor="#F34D19"
        android:textColorHint="#F34D19"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintEnd_toStartOf="@+id/guideline10"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/txtMesa"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:hint="Mesa"
        android:textColor="#F34D19"
        android:textColorHint="#F34D19"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline10"
        app:layout_constraintTop_toTopOf="@+id/guideline8" />

    <TableLayout
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline9">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="165dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="PRODUCTO"
                android:textColor="#F34D19"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="40dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="165dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="IMPORTE"
                android:textColor="#F34D19"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:gravity="right|center_vertical"
                android:text="TACOS"
                android:textColor="#F34D19"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="40dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/txtTacImp"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textColor="#F34D19"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:gravity="right|center_vertical"
                android:text="REFRESCOS"
                android:textColor="#F34D19"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="40dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/txtChesImp"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textColor="#F34D19"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:gravity="right|center_vertical"
                android:text="SUBTOTAL"
                android:textColor="#F34D19"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="40dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/txtSub"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textColor="#F34D19"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:gravity="right|center_vertical"
                android:text="DESCUENTO"
                android:textColor="#F34D19"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="40dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/txtDes"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textColor="#F34D19"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:gravity="right|center_vertical"
                android:text="TOTAL"
                android:textColor="#F34D19"
                android:textColorHint="#F34D19"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="40dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textColor="#F34D19"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/txtendPago"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:gravity="center"
        android:hint="PAGO"
        android:inputType="numberDecimal"
        android:textColor="#F34D19"
        android:textColorHint="#F34D19"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline11"
        app:layout_constraintVertical_bias="0.49" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:onClick="Pago"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintStart_toEndOf="@+id/txtendPago"
        app:layout_constraintTop_toTopOf="@+id/guideline11"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/pago" />

</androidx.constraintlayout.widget.ConstraintLayout>